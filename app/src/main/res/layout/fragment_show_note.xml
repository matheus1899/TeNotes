<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/show_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:elevation="2dp"
        android:textStyle="bold"
        android:textColor="@color/textColorTitle"
        android:background="@drawable/bg_white_with_corners"
        android:textColorHint="@color/textColorDetail"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/show_note_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:textAppearanceMedium"/>
    <TextView
        android:id="@+id/show_note_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="start|top"
        android:elevation="2dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:background="@drawable/bg_white_with_corners"
        android:textColor="@color/textColorTitle"
        android:textColorHint="@color/textColorDetail"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_note_title"
        style="?android:textAppearanceMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>